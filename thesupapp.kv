WindowManager:
    MenuWindow: 
    ElectronicsWindow: 
    TextileWindow: 
    GroceriesWindow: 
    StationaryWindow: 
    ConfirmWindow: 

<MenuWindow>:
    name : "menu"
    BoxLayout: 
        orientation : "vertical"       
        Label:                  
            text: "Welcome to the Adimart!\nMake your choice :"
            size_hint : 1,0.4
            font_size : "50dp"
        BoxLayout: 
            orientation: "horizontal"
            spacing : "10dp"
            BoxLayout: 
                orientation: "vertical"
                spacing : "10dp"     
                Button:                        
                    text: "Electronics"
                    on_release:
                        app.root.current = "electronics"
                        root.manager.transition.direction = "left"
                Button:                        
                    text: "Textile"
                    on_release:
                        app.root.current = "textile"
                        root.manager.transition.direction = "left"
            BoxLayout: 
                orientation: "vertical"
                spacing : "10dp" 
                Button:                        
                    text: "Groceries"
                    on_release:
                        app.root.current = "groceries"
                        root.manager.transition.direction = "left"
                Button:                        
                    text: "Stationary"
                    on_release:
                        app.root.current = "stationary"
                        root.manager.transition.direction = "left"
<ElectronicsWindow>:
    name : "electronics"
    GridLayout:  
        cols : 2             
        BoxLayout: 
            orientation: "vertical"
            spacing: "10dp"   
            BoxLayout: 
